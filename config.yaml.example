# Pericarp Library Configuration Example

database:
  driver: "sqlite"  # sqlite or postgres
  dsn: "file:events.db?cache=shared&mode=rwc"
  
  # PostgreSQL example:
  # driver: "postgres"
  # dsn: "host=localhost user=pericarp password=secret dbname=pericarp port=5432 sslmode=disable"

events:
  publisher: "channel"  # channel or pubsub

logging:
  level: "info"    # debug, info, warn, error, fatal
  format: "text"   # text or json