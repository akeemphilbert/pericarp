# {{.ProjectName}} Configuration

# Application settings
app:
  name: "{{.ProjectName}}"
  version: "1.0.0"
  environment: "development"
  debug: true

# Database configuration
database:
  driver: "postgres"
  host: "localhost"
  port: 5432
  name: "{{.ProjectName}}_db"
  user: "{{.ProjectName}}_user"
  password: "{{.ProjectName}}_password"
  ssl_mode: "disable"
  max_open_connections: 25
  max_idle_connections: 5
  connection_max_lifetime: "5m"

# Event store configuration
event_store:
  table_name: "events"
  snapshot_frequency: 10

# Logging configuration
logging:
  level: "info"
  format: "json"
  output: "stdout"

# Server configuration (if HTTP/gRPC server is added)
server:
  http:
    enabled: false
    host: "localhost"
    port: 8080
    read_timeout: "30s"
    write_timeout: "30s"
    idle_timeout: "60s"
  grpc:
    enabled: false
    host: "localhost"
    port: 9090

# Monitoring and observability
monitoring:
  metrics:
    enabled: true
    path: "/metrics"
  health:
    enabled: true
    path: "/health"
  tracing:
    enabled: false
    jaeger_endpoint: "http://localhost:14268/api/traces"